/* appointment.wxss */
.appointment{
  background:#f5f5f5;
}
.appointment .appointment-title{
  display:flex;
/*border:1px solid;*/
border-top:1rpx solid #e8e8e8;
background:#ffffff;
padding-bottom:8px;

}

.appointment-title .title-text{
  margin:12rpx 12rpx 0 12rpx;
font-size:32rpx;
text-align:center;
color:#4f4f4f;
margin-top:16rpx;

}
#title-text{
  color: #fc5a5f;
}
.title-text text{
  display:block;
  margin:8rpx 0;
}

.appointment .appointment-body{
  display:flex;
flex-wrap:wrap;
margin-top:20rpx;
width:100%;
padding:20rpx 24rpx;
background:#ffffff;

}
.appointment-body .body-demo{
flex-basis:160rpx;
/*padding:30rpx;*/
border:1px solid #dedede;
margin:16rpx 16rpx 0 0;
text-align:center;
height:160rpx;
/*vertical-align:middle;*/
}
.appointment-body .timeFull .text-time{
  color: #8f8f8f;
}
.appointment-body .timeFull .text-note{
  color: #fc5a5f;
}
#body-demo{
  border:1px solid #fd5a5f;
}
.body-demo .text-time{
  margin:44rpx 0 16rpx 0;
  font-size:42rpx;
}
.body-demo .text-note{
  font-size: 28rpx;
  color:#6ecb67;
}
.body-demo text{
  display: block;
}
.appointment-text{
  padding:30rpx 24rpx 130rpx 24rpx;
font-size:32rpx;
color:#8f8f8f;
}
.appointment-text .text-header{
  margin-bottom:27rpx;

}
.textImage{
  width:26rpx;
height:26rpx;
margin-right:11rpx;

}
.textDetail{
  line-height: 40rpx;
}
