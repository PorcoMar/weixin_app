    <view class="block_f"></view>
    <swiper-item>
        <scroll-view class="hot-box" scroll-y="true" upper-threshold="50" 
                    lower-threshold="100" bindscrolltolower="scrolltolower">

            <view class="hot-box-main">
                <view wx:for="{{datalist}}" wx:for-item="item" wx:for-index="i">
                    <!--//加载内容-->
                    <view wx:for="{{datalist[i].stories}}" wx:for-item="items">
                    <!--跳转到详情页-->
                        <navigator id="{{datalist[i].stories[index].id}}" url="detail/detail?id={{datalist[i].stories[index].id}}">
                            <view class="list-box">
                                <image class="left_img" src="https://timgsa.baidu.com/timg?image&quality=80&size=b9999_10000&sec=1486977383822&di=f49a6100250c71bea3e5de96ee1e0b66&imgtype=0&src=http%3A%2F%2Fc.hiphotos.baidu.com%2Fimage%2Fpic%2Fitem%2Fb90e7bec54e736d1dd9d340899504fc2d5626920.jpg"></image>
                                <view class="right">
                                    <view class="list-box-title">{{datalist[i].stories[index].title}}</view>
                                    <view class="dian">到店服务</view>
                                    <view class="home">到家服务</view>
                                    <view class="blockn"> </view>
                                    <view class="list-box-id">{{datalist[i].stories[index].id}}</view>
                                    <view class="list-box-id2">{{datalist[i].stories[index].id}}</view>
                                </view>
                            </view>
                        </navigator>
                    </view>
                </view>
            </view>

            <!-- 没有更多的时候 -->
            <view hidden="{{hotshidden}}" class="hot-box-more">
                <view wx:if="{{hothidden}}">
                    <image src="../../images/service/loading.gif" mode="aspectFill"/>
                </view>
                <view wx:else>
                    <text> 没有更多了 </text>
                </view>
            </view>





        </scroll-view>
    </swiper-item>


