/* pages/order/pages/wait-pay/wait-pay.wxss */
page {
    height: 100%;
    background-color:#f5f5f5;
}
.section{
    padding-top: 0rpx;
    height:100%;
}
.section>view {
    background: white;
    margin-top:20rpx;
    
}

.orderStatus {
    height: 190rpx;
}
.image {
    width: 60rpx;
    height: 60rpx;
    margin-left:80rpx;
    margin-top:80rpx;
}
.statusInfo {
    display: inline-block;
    margin-left:30rpx;
}
.waitPay{
    font-size: 36rpx;
    color:#fe6b78;
}
.statusInfo text{
    font-size: 28rpx;
    color: #4f4f4f;
}

.serviceDetail {
    height: 260rpx;
}
.shopName {
    height:80rpx;
    border-bottom:1rpx solid #f5f5f5;
    font-size: 28rpx;
    color: #4f4f4f;
    padding-left: 24rpx;
    line-height: 80rpx;
}
.service{
    height: 180rpx;
}
.shopImg {
    width: 120rpx;
    height: 120rpx;
    margin-left: 24rpx;
    margin-right:26rpx;
    margin-top:25rpx;
}
.serviceInfo {
    display: inline-block;
    line-height: 90rpx;
    font-size: 30rpx;
    color:#4f4f4f;
}
.serviceNum {
    font-size: 24rpx;
    color:#999999;
}
.priceInfo{
    display: inline-block;
    float: right;
    margin-top:36rpx;
    margin-right: 24rpx;
    font-size: 24rpx;
    color:#999999;
}
.discount{
    font-size: 28rpx;
    color: #4f4f4f;
    margin-bottom: 20rpx;
}
.price {
    text-decoration: line-through;
}

.priceDetail {
    height: 310rpx;
}
.priceDetail>view{
    height: 100rpx;
}
.orderTotal {
    line-height: 100rpx;
    margin-left:24rpx;
    font-size: 34rpx;
    color:#4f4f4f;
    font-family: "PingFang-SC-Regular";
}
.vip {
    width: 36rpx;
    height: 30rpx;
    margin-left: 24rpx;  
}
.memberDiscount {
    border-top: 1rpx solid #f5f5f5;
    border-bottom: 1rpx solid #f5f5f5; 
}
.memberDiscount text {
    font-size: 28rpx;
    color: #4f4f4f;
    line-height: 100rpx;
    margin-left:10rpx;
}
.memberDiscount .font {
    font-size: 28rpx;
    color:#fe6b78;
    line-height: 100rpx;
}
.realPay{
    height:110rpx;
    font-size: 30rpx;
    color:#8f8f8f;
    border:none;
    padding-left:24rpx;
    line-height: 110rpx;
}
.realPay .real {
    font-size: 34rpx;
    color: #fc5a5f;
    float:right;
    margin-right: 24rpx;
}
.font{
    font-size: 34rpx;
    color:#fe6b78;
    float:right;
    margin-right: 24rpx;
    line-height: 100rpx;
}

.infoDetail {
    /*height: 210rpx;*/
    padding-left: 24rpx;
}
.infoDetail view {
    padding-top: 30rpx;
    font-size: 30rpx;
    color: #8f8f8f;
}
.infoDetail .foot {
    padding-bottom: 20rpx;
}
.orderDetail{
    height: 120rpx;
    position: fixed;
    bottom: 0rpx;
    width: 100%;
}
button {
    font-size:30rpx;
	text-align:center;
	line-height:80rpx;
    border-radius:8rpx;
    margin-top:20rpx;
}
.cancel{
    width:210rpx;
    background: #fff;
    border:1rpx solid #4f4f4f;
	color:#4f4f4f;
    position: absolute;
    left:20rpx;
    /*float:left;
    margin-left: 20rpx;*/
}
.immediate {
    width: 464rpx;
    background: #fc5a5f;
    color:#fffefe;
    position: absolute;
    right: 20rpx;
    /*float:right;
    margin-right: 20rpx;*/
}

/*支付方式*/
.payment {
    font-size: 28rpx;
}
.payment>view {
    padding-left: 24rpx; 
}
.payment .title {
    color: #8f8f8f;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1rpx solid #f5f5f5;   
}
.payment .weixin {
    color: #4f4f4f;
    height: 100rpx;
    position: relative;
    font-family: "中等";
}
.payment .balance {
    border-top: 1rpx solid #f5f5f5;
}
.weixin image {
    width: 36rpx;
    height: 36rpx;
    margin-right: 20rpx;
    margin-top: 32rpx;
}
.weixin .checked {
    float: right;
}
.weixin text{
    position: absolute;
    top: 33rpx;
    left: 80rpx;
    font-size: 28rpx;
}


/*订单编号*/
.paddingBottom {
    width: 100%;
    height: 120rpx;
    background: #f5f5f5;
}