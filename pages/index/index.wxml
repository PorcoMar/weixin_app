<!--index.wxml-->
<view class="container">
    <!--头部开始-->
    <view class="header">
        <image class="logo" src="../../images/homePage/park@2x.png"></image>
        <text class="shopName">{{shopName}}</text>

        <view class="changeShop">
            <text class="changeShop-text">切换门店</text>
            <image src="../../images/homePage/Path@2x.png" class="more-arrow"></image>
        </view>
    </view>
    <!--头部结束-->

    <!--门店图片展示开始-->
    <view class="shop-photo">
        <image src="{{shopImage}}"></image>
    </view>
    <!--门店图片展示结束-->

    <!--门店详情开始-->
    <view class="shop-info">
        <view class="section">
            <image class="left-icon" src="../../images/homePage/time@2x.png" ></image>
            <text class="shop-info-text">营业时间周一至周五，10:00-21:00</text>
        </view>
        <view class="section">
            <image class="left-icon" src="../../images/homePage/address@2x.png" ></image>
            <text class="shop-info-text">[徐汇区]虹桥路1港汇中心一座</text>
            <view class="right-arrow">
                <image class="right-arrow-image" src="../../images/homePage/arrow@2x.png"></image>
            </view>
            
        </view>
        <view class="section">
            <image class="left-icon" src="../../images/homePage/mendian_tel_nor@2x.png" ></image>
            <text class="shop-info-text">0574-55845004</text>
            <view class="right-arrow">
                <image class="right-arrow-image" src="../../images/homePage/arrow@2x.png"></image>
            </view>
        </view>
        <view class="section">
            <image class="left-icon" src="../../images/homePage/wifi@2x.png"></image>
            <text class="extra-service">免费WIFI</text>

            <image class="left-icon right2" src="../../images/homePage/park@2x.png"></image>
            <text class="extra-service">免费停车</text>

            <image class="left-icon right2" src="../../images/homePage/wifi@2x.png"></image>
            <text class="extra-service">可刷卡</text>

            <image class="left-icon right2" src="../../images/homePage/wifi@2x.png"></image>
            <text class="extra-service">免费喝茶</text>
        </view>
    </view>
    <!--门店详情结束-->

