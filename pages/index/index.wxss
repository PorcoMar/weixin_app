/**index.wxss**/

/*--------头部样式-------*/
.container{
    border-top:1px solid #e5e5e5;
}
page{
    background-color:#f5f5f5;
}
.header{
    height:80rpx;
    /*background-color:;*/
    /*padding:9rpx 24rpx;*/
    display:flex;
    align-items:center;
    position:relative;
    justify-content:center;
    font-size:36rpx;
    color:#fd5a5f;
}
.logo{
    width:180rpx;
    height:180rpx;
    position:absolute;
    left:24rpx;
    bottom:20rpx;

}
.shopName{
    /*font-size:30rpx;*/
    font-family: "PingFang-SC-Medium";
    /*color: #4f4f4f;*/
    /*margin-left:30rpx;*/
}
.header .changeShop{
    min-width:28rpx;
    height:98rpx;
    position:absolute;
    top:0;
    right:24rpx;
    display:flex;
    align-items: center;
    justify-content: flex-end;
}
.changeShop{
  position:absolute;
  z-index:100;
  top:24rpx;
  right:24rpx;
  background:gray;
  border-radius:100rpx;
  padding:0 20rpx;
  width:150rpx;
  height:50rpx;
  font-size:24rpx;
  color:#ffffff;
  text-align:center;
  line-height:50rpx;
  opacity: 0.65;
}
.changeShop .changeShop-text{
    font-size:28rpx;
    /*color:#fc5a5f;*/
}
.changeShop .more-arrow{
    width:24rpx;
    height:24rpx;
    margin-top:5rpx;
}

/*----------门店图片展示结束--------*/
.shop-photo{
    /*margin-top:4rpx;*/
    height:400rpx;
}
.shop-photo image{
    width:100%;
    height:400rpx;
}

/*---------门店详情样式---------*/

.shop-info{
    margin-top:20rpx;
    background-color:#ffffff;
}
.shop-info .section{
    padding-left:24rpx;
    height:88rpx;
    border-bottom:1px #e5e5e5 solid; 
    display: flex;
    align-items: center;
    position:relative;
}
.shop-info .other-section{
    /*padding-left:24rpx;*/
    padding: 31rpx 24rpx;
    border-bottom:1px #e5e5e5 solid; 
    position:relative;
}

.shop-info .left-icon{
    width:28rpx;
    height:28rpx;
}

.shop-info .shop-info-text{
    font-size:28rpx;
    margin-left:20rpx;
    color:#4f4f4f;
    
    width:calc(100% - 210rpx);
    display:inline-block;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.shop-info .shop-info-note{
  margin:34rpx 48rpx 0;
  font-size:22rpx;
  color:#8f8f8f;
}

.shop-info .shop-info-distance{
    font-size:24rpx;
    margin-left:20rpx;
    color:#8f8f8f;
    position: absolute;
    top:0;
    right:72rpx;
    display:flex;
    height:88rpx;
    align-items: center;
}
.shop-info .right-arrow{
    width:16rpx;
    height:80rpx;
    position: absolute;
    top:0;
    right:24rpx;
    display:flex;
    align-items: center;
}
.shop-info .right-button{
  position:absolute;
  top:48rpx;
  right:24rpx;
}
.right-button .appointment{
  border-radius:200rpx;
  width:180rpx;
  height:60rpx;
  font-size:26rpx;
  color:#ffffff;
  background-color:#fd5a5f;
}
.right-arrow-image{
    width:16rpx;
    height:30rpx;
}
.shop-info .extra-service{
    font-size:22rpx;
    color:#8f8f8f;
    margin-left:10rpx;
}
.right2{
    margin-left:28rpx;
}

/*------服务列表开始------*/
/*.service-content{
    margin-top:20rpx;
    margin-bottom: 60rpx;
    padding:0 24rpx 34rpx 24rpx;
    background-color:#ffffff;
}*/
.service-content .title{
    width:100%;
    font-size:32rpx;
    color:#4f4f4f;
    display: flex;
    justify-content: center;
    padding-top:28rpx;
    padding-bottom:36rpx;
}

.service-item + .service-item{
    border-top:1px solid #e5e5e5;
    padding-top:24rpx;
}

.service-item .service-image image{
    /*width:100%;*/
    /*height:400rpx;*/
    width:100%;
    height:400rpx;
}

.service-item .service-name{
    padding-top:36rpx;
    padding-bottom:16rpx;
    font-size:32rpx;
    color:#4f4f4f;
}

.service-item .service-type{
    position: relative;
    display: flex;
    align-items: center;
}
.service-item .service-type .shop{
    
    width:112rpx;
    height:40rpx;
    font-size:22rpx;
    color:#78a4ff;
    border:1px solid #78a4ff;
    border-radius: 6rpx;
    margin-right:20rpx;

    display:flex;
    align-items: center;
    justify-content: center;
}
.service-item .service-type .door{
    width:110rpx;
    height:40rpx;

    font-size:22rpx;
    color:#fcb95a;
    border:1px solid #fcb95a;
    border-radius: 6rpx;
    margin-right:2rpx;

    display:flex;
    align-items: center;
    justify-content: center;
}
.service-item .service-type .saled{
    font-size:24rpx;
    color:#8f8f8f;
    position:absolute;
    right:0;
}
.service-item .service-price{
    padding:34rpx 0;
}
.service-item .service-price .discountPrice{
    font-size:46rpx;
    color:#fc5a5f;
    margin-right:18rpx;
}
.service-item .service-price .originalPrice{
    font-size:22rpx;
    color:#8f8f8f;
    text-decoration: line-through;
}

/*--------底部样式-------*/

.footer{
    font-size:28rpx;
    color:#8f8f8f;
    width:100%;
    height:124rpx;
    /*background-color:#e5e5e5;*/
    display: flex;
    align-items: center;
    justify-content: center;
}

/*服务品牌*/

.service-brand {
  width: 546rpx;
  margin: 0 auto;
}

.service-brand .brand-item {
  display: flex;
  margin-bottom: 40rpx;
}

.service-brand .brand-item:last-child {
  margin-bottom: 0;
}

.service-brand .brand-item image {
  width: 260rpx;
  height: 90rpx;
}

.service-brand .brand-item image:first-child {
  margin-right: 26rpx;
}