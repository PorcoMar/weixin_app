/* pages/index/selectShop/selectShop.wxss */

.container{
    border-top:1px solid #e5e5e5;
    background: #f5f5f5;
}
.shop-header{
    height:100rpx;
background-color:#ffffff;
/*padding:9rpx 24rpx;*/
display:flex;
align-items:center;
position:relative;

}

.logo{
    width:80rpx;
height:80rpx;
margin-left:20rpx;

}
.shopName{
    font-size:32rpx;
font-family:"PingFang-SC-Medium";
color:#4f4f4f;
margin-left:30rpx;

}
.shop-header .changeShop{
    min-width:28rpx;
    height:98rpx;
    position:absolute;
    top:0;
    right:30rpx;
    display:flex;
    align-items: center;
    justify-content: flex-end;
}
.changeShop-text{
    font-size:28rpx;
    color:#fc5a5f;
}
.changeShop .more-arrow{
    width:22rpx;
height:12rpx;
    /*margin-left:18rpx;*/
}
.shop-list .shop-item{
    /*padding:28rpx 0rpx;*/
    /*display: flex;*/
    flex-wrap: wrap;
    position: relative;
    margin-top: 20rpx;
    background: white;
}
.shop-list .shop-item + .shop-item{
     /*border-top:1px solid #e5e5e5;*/
}
.shop-list .shop-item image{
    width:100%;
    height: 380rpx;
    /*height:110rpx;*/
}
.shop-list .shop-item .shop-detail{
    /*width:calc(100% - 228rpx);*/
    /*height:110rpx;*/
    padding:28rpx;
    display:flex;
    flex-direction: column;
    justify-content: space-between;
}
.shop-list .shop-item .shop-name{
   /*font-size:30rpx;
   color:#4f4f4f;*/
    position:absolute;
    /*top:430rpx;*/
    color:#ffffff;
    left:24rpx;
    bottom:110rpx;
    font-size:32rpx;
}

.shop-list .shop-item .shop-detail .shop-address{
    font-size:24rpx;
    /*color:#4f4f4f;*/
    display:flex;
    align-items: center;
    position:relative;
}
.shop-list .shop-item .shop-detail .shop-address .shop-address-info{
    width:calc(100% - 120rpx);
    margin-left:20rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #8f8f8f;
}

.shop-list .shop-item .shop-detail .shop-distance{
    /*font-size:24rpx;*/
    /*color:#8f8f8f;*/
    color:#fc5a5f;
    position: absolute;
    right:0rpx;
}

.shop-list .shop-item .selected{
    position:absolute;
    top:0;
    right:0;
    width:76rpx;
    height:76rpx;
}