}
.userImg{
  width:140rpx;height:140rpx;border-radius:150rpx;margin:20rpx auto;
}
.nickName{
  font-weight:bold;font-size:30rpx;
}
.float_header .step text:nth-child(1){
  font-size:26rpx;margin-bottom:20rpx;
}.float_header .step text:nth-child(2){
  font-size:40rpx;font-weight:bold;
}



