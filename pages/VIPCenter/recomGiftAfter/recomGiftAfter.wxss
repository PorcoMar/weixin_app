.container{
  background: #f5f5f5;
}
.recom-header{
  height:246rpx;width:100%;position:relative;
}
.bgImg{
  width:100%;height:246rpx;
}
.float_header{
  position:absolute;width:100%;height:246rpx;top:0;left:0;
  display:flex;justify-content:space-around;align-items:center;
}
.float_header .step{
  min-width:160rpx;min-height:100rpx;text-align:center;
