<!--pages/personal/userInfo/userInfo.wxml-->
<view class="container">
<!--banner area-->
  <view class="container_vip">
    <image class="banner-header" src="../../images/app2.0/ka@2x.png"></image>
    <view class="top">
      <image src="{{shopLogo}}"></image>
      <text>{{shopName}}</text>
    </view>

    <view class="userInfo">
    <image src="{{wxInfo.avatarUrl}}"></image>
      <view class="right_text">
      <text class="nickName">{{wxInfo.nickName}}</text>
      <view class="noet">
        <image src="../../images/app2.0/huiyuandengji@2x.png"></image>
        <text class="vipLevel">{{cardName}}</text>
      </view>
      </view>
    </view>

    <view class="bottom-num" wx:if="{{idCardNo}}">
      NO.{{idCardNo}}
    </view>

  </view>

  <view class="second-money">
    <view class="floatL" bindtap="searchWallet">
      <text class="money-nor"><text class="money-bold">{{userInfo.memberBalance || 0}}</text> 元</text>
      <text class="monry_name">钱包</text>
    </view>
    <text class="borderm"></text>
    <view class="floatL" bindtap="cashGift">
      <text class="money-nor"><text class="money-bold">{{userInfo.canAmount || 0}}</text> 元</text>
      <text class="monry_name">礼金</text>
    </view>
    <text class="borderm"></text>
    <view class="floatL" bindtap="couponList">
      <text class="money-nor"><text class="money-bold">{{userInfo.coupon || 0}}</text> 张</text>
      <text class="monry_name">优惠券</text>
    </view>
  </view>


<view class="myOrder">
  <text class="my_order">我的订单</text>
  <view class="contan-satatue">
    <view class="floatL2" bindtap="waitPayment">
      <image src="../../images/app2.0/代付款@2x.png"></image>
      <text>待付款</text>
    </view>
    <view class="floatL2" bindtap="enableService">
      <image src="../../images/app2.0/fuwu@2x.png"></image>
      <text>可用服务</text>
    </view>
    <view class="floatL2" bindtap="waitEvaluation">
      <image src="../../images/app2.0/pingjia@2x.png"></image>
      <text>待评价</text>
    </view>
    <view class="floatL2" bindtap="toOrderList">
      <image src="../../images/app2.0/quanbudingdan@2x.png"></image>
      <text>全部订单</text>
    </view>
  </view>
</view>

<view class="myOrder">
  <text class="my_order">会员特权</text>
  <view class="contan-satatue">
    <view class="floatL2" bindtap="birthPower">
      <image src="../../images/app2.0/shengri@2x.png"></image>
      <text>生日特权</text>
    </view>
    <view class="floatL2" bindtap="recomGigt">
      <image src="../../images/app2.0/liwu@2x.png"></image>
      <text>推荐有礼</text>
    </view>
    <view class="floatL2" style="visibility:hidden;"></view>
    <view class="floatL2" style="visibility:hidden;"></view>
  </view>
</view>







</view>
