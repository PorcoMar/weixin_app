<view class="container">

<view class="banner_head">
  <text>{{canAmount}}</text>
  <text>可提总礼金(元)</text>
  <text>预计总礼金: {{totalAmount}}</text>
</view>

<view class="moneyRecord">礼金记录</view>

<view class="big_box">


<view class="listContent" wx:for="{{dataList}}" wx:for-item="item">
  <view class="leftCont">
    <text>{{item.createdTime}}</text>
    <text>{{item.name}} ({{item.phone}}) </text>
  </view>
  <view class="rightCont">
    <text style="color:{{item.color}}">{{item.amountStatus}}</text>
    <text>+{{item.amount}} </text>
  </view>
</view>

</view>

</view>
