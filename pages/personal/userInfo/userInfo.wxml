<!--pages/personal/userInfo/userInfo.wxml-->
<view class="container">
    <!--主要内容开始-->
    <view class="content">
        <view class="section">
            <text class="section-name">姓名</text>
            <text class="section-content">张筱雨</text>
        </view>
        <view class="section">
            <text class="section-name">地址</text>
            <text class="section-content">浙江省-杭州市-西湖区</text>
        </view>
        <view class="section">
            <text class="section-name">生日</text>
            <text class="section-content">10-12</text>
        </view>
    </view>
    <!--主要内容开始-->

    <view>
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{timePicker.value}}" bindchange="bindchange">
            <picker-view-column>
                <view wx:for="{{timePicker.months}}" style="line-height: 50px">{{item}}月</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{timePicker.days}}" style="line-height: 50px">{{item}}日</view>
            </picker-view-column>
        </picker-view>
    </view>
</view>
