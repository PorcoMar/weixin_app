/* pages/personal/userInfo/userInfo.wxss */
page{
    background-color:#f5f5f5;
}

.content{
    border-top:1px solid #dedede;
    border-bottom:1px solid #dedede;
    margin-top:20rpx;
    background-color:#fff;
    padding-left:24rpx;
}
.section{
    display: flex;
    height:90rpx;
    align-items: center;
    justify-content: space-between;
}
.section + .section{
    border-top:1px solid #dedede;
}
.section-name{
    font-size:28rpx;
    color:#4f4f4f;
}

.section-content{
    font-size:24rpx;
    color:#8f8f8f;
    background-image:url("../../../images/personal/more@2x.png");
    background-size:28rpx 28rpx;
    background-repeat: no-repeat;
    background-position: right;
    margin-right:24rpx;
    padding-right:48rpx;
}