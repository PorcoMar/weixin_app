/* pages/personal/userInfo/userInfo.wxss */
page{
    background-color:#f5f5f5;
}
.content{
    border-top:1px solid #e5e5e5;
    border-bottom:1px solid #e5e5e5;
    background-color:#fff;
    padding-left:24rpx;
}
.section{
    display: flex;
    height:90rpx;
    align-items: center;
    justify-content: space-between;
}
.section + .section{
    border-top:1px solid #e5e5e5;
}
.section-name{
    font-size:28rpx;
    color:#4f4f4f;
}

.section-button{
    margin-right:24rpx;
    min-width:28rpx;
    height:90rpx;
    display: flex;
    align-items: center;
}
.section-text{
    font-size:24rpx;
    color:#8f8f8f;
    margin-right:48rpx;
}
.section-button .more-arrow{
    width:28rpx;
    height:28rpx;
}
.selection{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:rgba(0, 0, 0, 0.4);
    z-index: 10;
}
.selection-content{
    background-color:#ffffff;
    position:absolute;
    bottom:0;
    width:100%;
    height:500rpx;
}
.operate-bar{
    height:90rpx;
    background-color:#f5f5f5;
    display:flex;
    font-size:28rpx;
    color:#fc5a5f;
    justify-content: space-between;
}
.operate-bar text{
    display: inline-block;
    padding:0 24rpx;
    height:90rpx;
    line-height: 90rpx;
}
.date-selection{
    height:410rpx;
    font-size:48rpx;
    color:#4f4f4f;
}
.date-selection .column1 view{
    display: flex;
    justify-content: flex-end;
    margin-right:39rpx;
}
.date-selection .column2{
    margin-left:39rpx;
}

.address-selection{
    height:410rpx;
    font-size:40rpx;
    color:#4f4f4f;
}
.address-selection .column1 view{
    display:flex;
    justify-content: flex-end;
}
.address-selection .column2 view{
    display:flex;
    justify-content: center;
}
