/* pages/personal/userInfo/userInfo.wxss */
page{
    background-color:#f5f5f5;
}

.content{
    border-top:1px solid #dedede;
    border-bottom:1px solid #dedede;
    margin-top:20rpx;
    background-color:#fff;
    padding-left:24rpx;
}
.section{
    display: flex;
    height:90rpx;
    align-items: center;
    justify-content: space-between;
}
.section + .section{
    border-top:1px solid #dedede;
}
.section-name{
    font-size:28rpx;
    color:#4f4f4f;
}

.section-content{
    font-size:24rpx;
    color:#8f8f8f;
    background-image:url("../../../images/personal/more@2x.png");
    background-size:28rpx 28rpx;
    background-repeat: no-repeat;
    background-position: right;
    margin-right:24rpx;
    padding-right:48rpx;
}

.selection{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color:rgba(0, 0, 0, 0.4);
    z-index: 10;
}
.selection-content{
    background-color:#ffffff;
    position:absolute;
    bottom:0;
    width:100%;
    height:500rpx;
}
.operate-bar{
    height:90rpx;
    background-color:#f5f5f5;
    display:flex;
    font-size:28rpx;
    color:#fc5a5f;
    justify-content: space-between;
    align-items: center;
    padding:0 24rpx;
}
.date-selection{
    height:410rpx;
    font-size:48rpx;
    color:#4f4f4f;
}
.column1 view{
    display: flex;
    justify-content: flex-end;
    margin-right:39rpx;
}
.column2{
    margin-left:39rpx;
}